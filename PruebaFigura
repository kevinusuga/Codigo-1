    private void btnCAreaActionPerformed(java.awt.event.ActionEvent evt) {                                         
          
            double area;
            int radio = Integer.parseInt(txtCRadio.getText());
            Circulo figura1 = new Circulo(radio);
            area =figura1.calcularArea();
            txtCArea.setText(String.valueOf(area));
            
                    
            // TODO add your handling code here:
    }                                        

    private void btnCPerimetroActionPerformed(java.awt.event.ActionEvent evt) {                                              
          
            double perimetro;
            int radio = Integer.parseInt(txtCRadio.getText());
            Circulo figura1 = new Circulo(radio);
            perimetro = figura1.calcularPerimetro();
            txtCPerimetro.setText(String.valueOf(perimetro));        // TODO add your handling code here:
    }                                             

    private void btnCBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                           
          
            txtCRadio.setText("");
             txtCArea.setText("");
              txtCPerimetro.setText("");
            // TODO add your handling code here:
    }                                          

    private void btnCUAreaActionPerformed(java.awt.event.ActionEvent evt) {                                          
              int lado = Integer.parseInt(txtCLado.getText());
              Cuadrado cuadrado = new Cuadrado(lado);
              double area = cuadrado.calcularArea();
              txtCUArea.setText(String.valueOf(area));
           // TODO add your handling code here:
    }                                         

    private void btnCUPerimetroActionPerformed(java.awt.event.ActionEvent evt) {                                               
              int lado = Integer.parseInt(txtCLado.getText());
              Cuadrado cuadrado = new Cuadrado(lado);
              double perimetro = cuadrado.calcularPerimetro();
              txtCUPerimetro.setText(String.valueOf(perimetro));
    }                                              

    private void btnCUBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                            
        txtCLado.setText("");
             txtCUArea.setText("");
              txtCUPerimetro.setText("");
    }                                           

    private void btnRAreaActionPerformed(java.awt.event.ActionEvent evt) {                                         
             int base = Integer.parseInt(txtRBase.getText());
             int altura = Integer.parseInt(txtRAltura.getText());
             Rectangulo rectangulo = new Rectangulo(base, altura);
             double area = rectangulo.calcularArea();
             txtRArea.setText(String.valueOf(area));
    }                                        

    private void btnRPerimetroActionPerformed(java.awt.event.ActionEvent evt) {                                              
             int base = Integer.parseInt(txtRBase.getText());
             int altura = Integer.parseInt(txtRAltura.getText());
             Rectangulo rectangulo = new Rectangulo(base, altura);
             double perimetro = rectangulo.calcularPerimetro();
             txtRPerimetro.setText(String.valueOf(perimetro));
    }                                             

    private void btnRBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        txtRBase.setText("");
         txtRAltura.setText("");
             txtRArea.setText("");
              txtRPerimetro.setText("");
    }                                          

    private void btnTAreaActionPerformed(java.awt.event.ActionEvent evt) {                                         
             int base = Integer.parseInt(txtTBase.getText());
             int altura = Integer.parseInt(txtTAltura.getText());
             TrianguloRectangulo triangulorectangulo = new TrianguloRectangulo(base, altura);
             double area = triangulorectangulo.calcularArea();
             txtTArea.setText(String.valueOf(area));
    }                                        

    private void btnTPerimetroActionPerformed(java.awt.event.ActionEvent evt) {                                              
             int base = Integer.parseInt(txtTBase.getText());
             int altura = Integer.parseInt(txtTAltura.getText());
             TrianguloRectangulo triangulorectangulo = new TrianguloRectangulo(base, altura);
             double perimetro = triangulorectangulo.calcularPerimetro();
             txtTPerimetro.setText(String.valueOf(perimetro));
    }                                             

    private void btnTTipoActionPerformed(java.awt.event.ActionEvent evt) {                                         
             int base = Integer.parseInt(txtTBase.getText());
             int altura = Integer.parseInt(txtTAltura.getText());
             TrianguloRectangulo triangulorectangulo = new TrianguloRectangulo(base, altura);
             String tipo = triangulorectangulo.determinarTipoTriángulo();
             txtTTipo.setText(tipo);
    }                                        

    private void btnTBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                           
        txtTBase.setText("");
         txtTAltura.setText("");
             txtTArea.setText("");
              txtTPerimetro.setText("");
               txtTTipo.setText("");
    }                                          

