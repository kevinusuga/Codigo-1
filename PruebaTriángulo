public class TrianguloEquilatero {
    private double lado;
    private double perimetro;
    private double altura;
    private double area;

    // Constructor
    public TrianguloEquilatero(double lado) {
        this.lado = lado;
        calcularPerimetro();
        calcularAltura();
        calcularArea();
    }

    // Método para calcular el perímetro
    private void calcularPerimetro() {
        this.perimetro = this.lado * 3;
    }

    // Método para calcular la altura
    private void calcularAltura() {
        this.altura = Math.sqrt(Math.pow(this.lado, 2) - Math.pow(this.lado / 2, 2));
    }

    // Método para calcular el área
    private void calcularArea() {
        this.area = (Math.pow(this.lado, 2) * Math.sqrt(3)) / 4;
    }

    // Método para obtener el área
    public double getArea() {
        return this.area;
    }
    public double getPerimetro() {
    return this.perimetro;
    }
    public double getAltura() {
        return this.altura;
    }
}

public class PruebaTriangulo {

     public static void main(String[] args) {
        VentanaPrincipal ventana = new VentanaPrincipal();
        ventana.show(true);
    
    }
}

