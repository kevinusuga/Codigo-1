    private void btnAreaActionPerformed(java.awt.event.ActionEvent evt) {                                        
        double lado = Double.parseDouble(txtLado.getText());
        TrianguloEquilatero triangulo = new TrianguloEquilatero(lado);
        double area = triangulo.getArea();
        txtArea.setText(String.valueOf(area));
    }                                       

    private void btnPerimetroActionPerformed(java.awt.event.ActionEvent evt) {                                             
        double lado = Double.parseDouble(txtLado.getText());
        TrianguloEquilatero triangulo = new TrianguloEquilatero(lado);
        double perimetro = triangulo.getPerimetro();
        txtPerimetro.setText(String.valueOf(perimetro));
    }                                            

    private void btnAlturaActionPerformed(java.awt.event.ActionEvent evt) {                                          
        double lado = Double.parseDouble(txtLado.getText());
        TrianguloEquilatero triangulo = new TrianguloEquilatero(lado);
        double altura = triangulo.getAltura();
        txtAltura.setText(String.valueOf(altura));
    }                                         

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtLado.setText("");
        txtAltura.setText("");
        txtPerimetro.setText("");
        txtArea.setText("");
    }                                         

