package com.mycompany.pruebasalario;

/**
 *
 * @author Casa
 */
public class Empleado {
    // Atributos
    private String codEmpleado;
    private String nombres;
    private double horasMes;
    private double valorHora;
    private double retFuente;
    private double salBruto;
    private double salNeto;

    // Constructor
    public Empleado(String codEmpleado, String nombres, double horasMes, double valorHora, double retFuente) {
        this.codEmpleado = codEmpleado;
        this.nombres = nombres;
        this.horasMes = horasMes;
        this.valorHora = valorHora;
        this.retFuente = retFuente;
        calcularSalarios();
    }

    // Método para calcular los salarios
    private void calcularSalarios() {
        this.salBruto = this.valorHora * this.horasMes;
        this.salNeto = this.salBruto - this.salBruto * (this.retFuente / 100);
    }

    // Método para obtener el salario bruto
    public double getSalBruto() {
        return this.salBruto;
    }

    // Método para obtener el salario neto
    public double getSalNeto() {
        return this.salNeto;
    }

   
}

