    private void btnBrutoActionPerformed(java.awt.event.ActionEvent evt) {                                         
        String codEmpleado = txtCodEmpleado.getText();
        String nombres = txtNombres.getText();
        double horasMes = Double.parseDouble(txtHorasMes.getText());
        double valorHora = Double.parseDouble(txtValorHoras.getText());
        double retFuente = Double.parseDouble(txtPorcenReten.getText());
        
        Empleado empleado = new Empleado(codEmpleado, nombres, horasMes, valorHora, retFuente);
        double salBruto = empleado.getSalBruto();
        
        txtBruto.setText(String.valueOf(salBruto));
    }                                        

    private void btnNetoActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String codEmpleado = txtCodEmpleado.getText();
        String nombres = txtNombres.getText();
        double horasMes = Double.parseDouble(txtHorasMes.getText());
        double valorHora = Double.parseDouble(txtValorHoras.getText());
        double retFuente = Double.parseDouble(txtPorcenReten.getText());
        
        Empleado empleado = new Empleado(codEmpleado, nombres, horasMes, valorHora, retFuente);
        double salNeto = empleado.getSalNeto();
        
        txtNeto.setText(String.valueOf(salNeto));
    }                                       

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtCodEmpleado.setText("");
        txtNombres.setText("");
        txtHorasMes.setText("");
        txtValorHoras.setText("");
        txtPorcenReten.setText("");
        txtNeto.setText("");
        txtBruto.setText("");
        txtMNombres.setText("");
        txtMCodigo.setText("");
    }                                         

    private void btnMCodigoActionPerformed(java.awt.event.ActionEvent evt) {                                           
         String codEmpleado = txtCodEmpleado.getText();
         txtMCodigo.setText(String.valueOf(codEmpleado));
    }                                          

    private void btnMNombresActionPerformed(java.awt.event.ActionEvent evt) {                                            
        String nombres = txtNombres.getText();
        txtMNombres.setText(String.valueOf(nombres));
    }                                           

