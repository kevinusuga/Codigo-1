package com.mycompany.pruebapago;

/**
 *
 * @author Casa
 */
public class Estudiante {
     private String numInscripcion;
    private String nombres;
    private int estrato;
    private double patrimonio;
    private double pagoMatricula;

    // Constructor
    public Estudiante(String numInscripcion, String nombres, int estrato, double patrimonio) {
        this.numInscripcion = numInscripcion;
        this.nombres = nombres;
        this.estrato = estrato;
        this.patrimonio = patrimonio;
        this.pagoMatricula = 50000; // Pago base de matrícula
        calcularPagoMatricula();
    }

    // Método para calcular el pago de matrícula
    private void calcularPagoMatricula() {
        if (this.patrimonio > 2000000 && this.estrato > 3) {
            this.pagoMatricula += 0.03 * this.patrimonio;
        }
    }

    // Método para obtener el pago de matrícula
    public double getPagoMatricula() {
        return this.pagoMatricula;
    }
}

