    private void txtNombresActionPerformed(java.awt.event.ActionEvent evt) {                                           
        // TODO add your handling code here:
    }                                          

    private void btnPagoActionPerformed(java.awt.event.ActionEvent evt) {                                        
        String numInscripcion = txtInsc.getText();
        String nombres = txtNombres.getText();
        int estrato = Integer.parseInt(txtEstrato.getText());
        double patrimonio = Double.parseDouble(txtPatri.getText());
        
        Estudiante estudiante = new Estudiante(numInscripcion, nombres, estrato, patrimonio);
        double pagoMatricula = estudiante.getPagoMatricula();
        
        String mensaje = "El estudiante de nombre: " + nombres + " y código: " + numInscripcion + " debe pagar: " + pagoMatricula;
        txtPago.setText(mensaje);
    }                                       

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtPago.setText("");
        txtInsc.setText("");
        txtNombres.setText("");
        txtEstrato.setText("");
        txtPatri.setText("");
    }                                         

