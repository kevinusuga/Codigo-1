package com.mycompany.pruebaempleado;

/**
 *
 * @author Casa
 */
public class Empleado {
    private String nombre;
    private int horasTraMes;
    private double salarioHora;
    private double salario;

    // Constructor
    public Empleado(String nombre, double salarioHora, int horasTraMes) {
        this.nombre = nombre;
        this.salarioHora = salarioHora;
        this.horasTraMes = horasTraMes;
        calcularSalario();
    }

    // Método para calcular el salario
    private void calcularSalario() {
        this.salario = this.horasTraMes * this.salarioHora;
    }

    // Método para obtener la información del empleado
    public String obtenerInformacion() {
        StringBuilder info = new StringBuilder();
        info.append("El nombre del trabajador es: ").append(this.nombre);
        if (this.salario > 450000) {
            info.append("\nEl salario es: $").append(this.salario);
        }
        return info.toString();
    }
}

public class PruebaEmpleado {

    public static void main(String[] args) {
        
        VentanaPrincipal ventana = new VentanaPrincipal();
        ventana.show(true);
    }
}

