    private void btnNombreActionPerformed(java.awt.event.ActionEvent evt) {                                          
        String nombre = txtNombre.getText();
        double salarioHora = Double.parseDouble(txtSalario.getText());
        int horasTraMes = Integer.parseInt(txtHoras.getText());
        
        Empleado empleado = new Empleado(nombre, salarioHora, horasTraMes);
        String info = empleado.obtenerInformacion();
        
        txtSNombre.setText(info);
    }                                         

    private void btnBorrarActionPerformed(java.awt.event.ActionEvent evt) {                                          
        txtSNombre.setText("");
        txtNombre.setText("");
        txtSalario.setText("");
        txtHoras.setText("");
    }                                         

