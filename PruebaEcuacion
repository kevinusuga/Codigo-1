package com.mycompany.pruebaecuacion;

/**
 *
 * @author Casa
 */
public class EcuacionCuadratica {
    private double a;
    private double b;
    private double c;
    private double discriminante;
    private double x1;
    private double x2;
    private boolean tieneSolucionesReales;

    // Constructor
    public EcuacionCuadratica(double a, double b, double c) {
        this.a = a;
        this.b = b;
        this.c = c;
        calcularDiscriminante();
        calcularSoluciones();
    }

    // Método para calcular el discriminante
    private void calcularDiscriminante() {
        this.discriminante = this.b * this.b - 4 * this.a * this.c;
    }

    // Método para calcular las soluciones
    private void calcularSoluciones() {
        if (this.discriminante > 0) {
            this.x1 = (-this.b + Math.sqrt(this.discriminante)) / (2 * this.a);
            this.x2 = (-this.b - Math.sqrt(this.discriminante)) / (2 * this.a);
            this.tieneSolucionesReales = true;
        } else if (this.discriminante == 0) {
            this.x1 = -this.b / (2 * this.a);
            this.x2 = this.x1;
            this.tieneSolucionesReales = true;
        } else {
            this.tieneSolucionesReales = false;
        }
    }

    // Método para obtener las soluciones como una cadena
    public String obtenerSoluciones() {
        if (this.tieneSolucionesReales) {
            if (this.discriminante > 0) {
                return "Las soluciones son:\nx1: " + this.x1 + "\nx2: " + this.x2;
            } else {
                return "La solución única es x1 y x2: " + this.x1;
            }
        } else {
            return "La ecuación no tiene soluciones reales";
        }
    }
}

public class PruebaEcuacion {

    public static void main(String[] args) {
        VentanaPrincipal ventana = new VentanaPrincipal();
        ventana.show(true);
    }
}

